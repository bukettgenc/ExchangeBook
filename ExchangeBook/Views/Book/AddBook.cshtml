                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- header section end -->

    <div class="contact_section layout_padding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9">
                    <div class="input_main ">
                        <div class="container validate-form">
                            @using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data", @id = id }))
                            {
                                <div class="form-group validate-input" data-validate="Parola Girin">
                                    @Html.TextBoxFor(m => m.BookName, new { placeholder = "Kitap Adı", @class = "email-bt" })
                                    @Html.ValidationMessageFor(m => m.BookName, "", new { @style = "color:red" })
                                </div>
                                <div class="form-group validate-input" data-validate="Parola Girin">
                                    @Html.TextBoxFor(m => m.BookAuthor, new { placeholder = "Yazar", @class = "email-bt" })
                                    @Html.ValidationMessageFor(m => m.BookAuthor, "", new { @style = "color:red" })

                                </div>

                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.BookExplanation, new { @class = "massage-bt", placeholder = "Açıklama" })

                                </div>
                           
                                <br />
                                <div class="form-group">

                                    @Html.TextBox("file", "", new { type = "file" })
                                </div>
                                <button type="submit" class="submit_textMessageInput">Kitap Ekle</button>}

                        </div>
                    </div>
                </div>

            </div>
        </div>
