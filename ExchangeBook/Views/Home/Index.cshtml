                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- header section end -->
    <!-- banner section start -->
    <div class="layout_padding banner_section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="banner_taital"><b>Tek bir kitap,birçok insan</b></h1>
                    <p class="browse_text"><b>Hadi sende istediğin kitabı ara ve değiş tokuş yap!</b></p>
                    <div class="banner_bt">
                        <button class="read_bt"><a href="/Home/Information/@id">Bilgi Al</a> </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- banner section end -->
    <!-- search box start -->
    <div class="container">
        <div class="search_box">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {
            <div class="row">

                <div class="col-sm-3">
                    <div class="form-group">
                        @Html.TextBox("book", "", new { @class = "email_boton", @placeholder = "Kitap adına göre" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        @Html.TextBox("author", "", new { @class = "email_boton", @placeholder = "Yazara göre ara" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        @Html.TextBox("type", "", new { @class = "email_boton", @placeholder = "Türüne göre ara" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="submit" class="search_bt" value="Ara " />
                    </div>
                </div>
                @*<div class="fashion_menu">
            <ul>
                <li class="active"><a href="#">Roman</a></li>
                <li><a href="#">Çocuk kitapları</a></li>
                <li><a href="#">Şiir</a></li>
                <li><a href="#">Hikaye</a></li>
                <li><a href="#">Deneme</a></li>
            </ul>
        </div>*@
            </div>}
        </div>
    </div>
    <!-- search box end -->
    <!-- section PROMOTED start -->
    <div class=" layout_padding promoted_sectipon">
        <div class="container">
            <h1 class="promoted_text"><span style="border-bottom: 5px solid saddlebrown;">İLANDAKİ KİTAPLAR</span></h1>
            <div class="images_main">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        {
                            string button_name = "";
                            if (favList.Exists(x => x.BookId == item.BookId && x.UserId == id))
                            {
                                button_name = "Favorilerden Kaldır";
                            }
                            else
                            {
                                button_name = "Favorilere Ekle";
                            }

                            string idButton = "button" + flag;
                            flag++;


                            <div class="col-sm-6 col-md-6 col-lg-3">
                                <div class="images"><img width="500px" height="325px" src=Url.Content(item.BookImage) style="width: 100%;"></div>


                                <button id=@idButton class="eye-icon" value=@button_name>@button_name<span class="like-icon"><img width="25px;" src="~/adsiter/images/like-icon.png"></span></button>

                                <div class="numbar_text"><span class="like-icon">@item.BookName</span></div>
                                <div class="numbar_text"><span class="like-icon">@item.BookAuthor</span></div>
                                <button class="mobile_bt"><a href="/Message/WriteMessage/?id=@id&userId=@item.UserId">Mesaj At</a></button><br />
                                <button class="mobile_bt"><a href="/Home/UserProfile/?id=@id&userId=@item.UserId">Diğer kitapları gör</a></button>

                            </div>

                            <script type="text/javascript">
                        $(function() {
                            $(@idButton).click(function() {
                                $.ajax({
                                    url: '/Home/AddFav/?id=@id&bookId=@item.BookId',
                                    type: 'POST',
                                    datatype: 'json',
                                    success: function(data) {

                                        $(@idButton).html(data.buttonName);

                                    }
                                });
                            })
                        })
                            </script>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- section PROMOTED end -->
    <!-- about section start -->
    <div class="layout_padding about_section">
